<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.co.rland.web.repository.MenuRepository">
	<resultMap id="menuResultMap" type="Menu">
	  <result property="regDate" column="reg_date"/>	  
	</resultMap>
	
	<select id="findAll" resultMap="menuResultMap">
		select * 
		from menu
		<trim prefix="WHERE" prefixOverrides="AND |OR ">
			<if test="query != null">
				name like '%${query}%'
			</if>
			<if test="price != null">
				and price > #{price}
			</if>
			<if test="categoryId != null">
				and categoryId = #{categoryId}
			</if> 
		</trim>    
		order by ${orderField} ${orderDisr} 
		limit #{size} offset #{offset}
		
	</select>
	<select id="findAllByIds" resultMap="menuResultMap">
		select *
		from menu
		<where>
		    <foreach item="id" index="index" collection="list"
		        open="ID in (" separator="," close=")">
		          #{id}
		    </foreach>
	  	</where>	
	</select>
	<select id="findById" resultType="Menu">
		select *
		from menu
		where id=#{id}
	</select>
	<insert id="insert">
	
	</insert>
	<update id="update" parameterType="Menu">
		update menu
		 <trim prefix="SET" suffixOverrides=",">
		 	<if test="price != null">
		 		price=#{price},
		 	</if>
		 	<if test="name != null">
		    	name = #{name},
		    </if>
		    <if test="img != null">
		    	img = #{img}
		    </if>
		 </trim>		
		where id = #{id}
	</update>
	<delete id="delete"></delete>
</mapper>

