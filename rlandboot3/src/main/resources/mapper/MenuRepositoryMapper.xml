<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.co.rland.web.repository.MenuRepository">
	<select id="findAll" resultType="kr.co.rland.web.entity.Menu">
		select * 
		from menu
		<trim prefix="WHERE" prefixOverrides="AND |OR ">
			<if test="query != null">
				name like '%${query}%'
			</if>
			<if test="query != null">
				and price > #{price}
			</if>
			<if test="query != null">
				and categoryId = #{categoryId}
			</if> 
		</trim>    
		order by ${orderField} ${orderDisr} 
		limit #{size} offset #{offset}
		
	</select>
	<select id="findById" resultType="kr.co.rland.web.entity.Menu">
		select *
		from menu
		where id=#{id}
	</select>
	<insert id="insert"></insert>
	<update id="update"></update>
	<delete id="delete"></delete>
</mapper>

